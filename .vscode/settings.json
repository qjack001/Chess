{
	"editor.formatOnSave": false,
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"eslint.validate": ["mjs", "cjs", "vue", "javascript", "typescript", "json"],
	"eslint.packageManager": "pnpm",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"files.exclude": {
		"**/.git": true,
		".gitignore": true,
		"**/.DS_Store": true,
		"pnpm-lock.yaml": true,
		"node_modules": true,
		"dist": true,
		".eslintrc": true,
		"vite.config.ts": true,
		"tsconfig.json": true,
		"tsconfig.config.json": true,
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [{
			"scope": "string.key.json5",
			"settings": { "foreground": "#8BDEDB" },
		}],
	},
}